{
	"copyright": "\n*************************************************\n****************** WeCodeEmail ******************\n*************************************************\n",
	"updateMenu": [
		{
			"question": "Select action:",
			"caption": "Continue project",
			"value": "project_continue",
			"ignore": [
				{ "matchValue": "node_modules", "dependenciesAny": ["project_continue_old"] },
				{ "matchValue": ".csscomb.json", "dependenciesAny": ["project_continue_old"] },
				{ "matchValue": "Gruntfile.js", "dependenciesAny": ["project_continue_old"] },
				{ "matchValue": "grunt-settings.js", "dependenciesAny": ["project_continue_old"] },
				{ "matchValue": "package.json", "dependenciesAny": ["project_continue_old"] },
				{ "matchValue": "README.md", "dependenciesAny": ["project_continue_old"] }
			],
			"copy_to": "src",
			"run": [
				{ "matchValue": "npm i", "fsNotExist": "markup/node_modules" },
				"npm run dev"
			]
		},
		{
			"caption": "Update project modules",
			"value": "project_update",
			"run": ["npm update"]
		},
		{
			"caption": "Release project (ready for QA)",
			"value": "project_dist",
			"run": ["npm run build"]
		}
	],
	"createMenu": [
		{
			"question": "Select project type:",
			"caption": "Markup",
			"value": "markup"
		},
		{
			"caption": "Markup Lenovo",
			"value": "markup_lenovo"
		}
	],
	"data": {
		"path": "markup",
		"source": [
			{ "matchValue": "D:/wce-environment/src/markup", "excludeIf": ["all"] },
			{ "matchValue": "D:/wce-environment/src/twogether", "dependenciesAny": ["markup_lenovo"] }
		],
		"ignore": [
			{ "matchValue": "gulp/", "dependenciesAny": ["markup_lenovo"] },
			{ "matchValue": "src/html", "dependenciesAny": ["markup_lenovo"] },
			{ "matchValue": "src/js", "dependenciesAny": ["markup_lenovo"] },
			{ "matchValue": "gulp/", "dependenciesAny": ["markup_lenovo"] },
			{ "matchValue": "src/index.html", "dependenciesAny": ["markup_lenovo"] }
		],
		"rename": [
			{ "matchValue": {"src/scss/":"src/styles/"}, "dependenciesAny": ["markup_lenovo"] }
		],
		"run": [
			{ "matchValue": "npm i" },
			{ "matchValue": "npm run dev" }
		]
	}
}